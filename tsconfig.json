{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "strict": true,
        "removeComments": false,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "target": "ES2021",
        "sourceMap": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "useUnknownInCatchVariables": false
    },
}