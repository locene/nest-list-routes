{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "strict": true,
        "removeComments": false,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "target": "ES2021",
        "sourceMap": false,
        "outDir": "./dist",
        "rootDir": "./lib",
        "skipLibCheck": true,
        "useUnknownInCatchVariables": false
    },
    "include": [
        "lib/**/*",
        "eslint.config.mjs"
    ],
    "exclude": [
        "node_modules"
    ]
}